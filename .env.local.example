# Frontend Environment Variables
# Copy from root .env.example and fill in your values

# Backend API Configuration
BACKEND_API_URL=http://localhost:8000

# Supabase Configuration (Frontend)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Lemon Squeezy Configuration (Frontend)
NEXT_PUBLIC_LEMON_SQUEEZY_API_KEY=your_api_key_here
NEXT_PUBLIC_LEMON_SQUEEZY_STORE_ID=your_store_id_here

# Product Variant IDs
NEXT_PUBLIC_LEMON_SQUEEZY_PRO_MONTHLY_VARIANT_ID=your_pro_monthly_variant_id
NEXT_PUBLIC_LEMON_SQUEEZY_PRO_YEARLY_VARIANT_ID=your_pro_yearly_variant_id
NEXT_PUBLIC_LEMON_SQUEEZY_ENTERPRISE_MONTHLY_VARIANT_ID=your_enterprise_monthly_variant_id
NEXT_PUBLIC_LEMON_SQUEEZY_ENTERPRISE_YEARLY_VARIANT_ID=your_enterprise_yearly_variant_id

# Webhook Secret
LEMON_SQUEEZY_WEBHOOK_SECRET=your_webhook_secret_here